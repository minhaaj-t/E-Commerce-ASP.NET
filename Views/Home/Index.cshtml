<!-- Quick View Modal (functional) -->
<div class="modal fade" id="quickViewModal" tabindex="-1" aria-labelledby="quickViewModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="quickViewModalLabel">Quick View</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center">
        <img class="quickview-img mb-3" src="" alt="" style="max-width: 100%; height: 200px; object-fit: cover; border-radius: 1rem;">
        <div class="quickview-rating mb-2"></div>
        <div class="quickview-price fw-bold mb-2"></div>
        <div class="quickview-desc mb-3"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
